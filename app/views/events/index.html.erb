<p id="notice"><%= notice %></p>

<h1>All Events</h1>

<table>
  <thead>
    <tr>
      <th>Upcoming Events:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.live_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Past Events:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Event', new_event_path, method: :get %>

<%= button_to 'My Events', user_path(@user), method: :get %>
